apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: autostopping-secret-reader-role
  namespace: harness-autostopping
rules:
  - apiGroups:
      - ""
    resources:
      - secrets
      - configmaps
    verbs:
      - get
      - list
      - watch
      - create
      - patch
      - delete
      - update
